<%- include ('./partials/header.ejs') %>

  <body>
    <%- include ('./partials/navbar.ejs') %>
      <div class="container">
        <hr>
        <h1>
          <%= pergunta.titulo %>
        </h1>
        <p>
          <%= pergunta.descricao%>
        </p>
        <hr>
        <form method="POST" action="/responder">
          <h3>Answer:</h3>
          <textarea placeholder="Type your answer" class="form-control" name="corpo"></textarea>
          <br>
          <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
          <button class="btn btn-dark">Submit</button>
        </form>
        <hr>
        <h3>Answers</h3>
        <hr>
        <% respostas.forEach(resposta=> { %>
          <br>
          <div class="card">
            <div class="card-body">
              <p>
                <%= resposta.corpo%>
              </p>
            </div>
          </div>
          <% }) %>
      </div>
  </body>
  <%- include ('./partials/footer.ejs') %>